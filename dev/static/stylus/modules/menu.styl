.page-nav 
    position relative
    size(100%, auto)
    overflow hidden
    text-align center
    background-color rgba(0, 0, 0, 0.6)
    
.menu-list 
    text-align center
    
.menu-item
    display inline-block
    
.menu-link
    display inline-block
    padding 1em 3em
    color white
    transition-property all .2s linear 0s


.menu-link:hover
    color #34B484
    
.btn-wrapper
    position(absolute, 10px, 50px) // top 10, right 50
    size(34px, 27px) // width 34, height 27
    transition .3s
    cursor pointer
    z-index 999
    
.btn-wrapper.active
    .btn-top 
        transform translateY(11px) translateX(0) rotate(45deg)
    .btn-middle
        opacity: 0
    .btn-bottom
        transform translateY(-11px) translateX(0) rotate(-45deg)

.btn-wrapper:hover
    opacity 0.6
        
.btn 
    position(absolute, , , , 0px)
    size(100%, 5px)
    transition  all 0.35s ease
    background-color #34B484 
    border none
    border-radius 10px

.btn-top
    top 0px
    
.btn-middle
    top 11px

.btn-bottom
    top 22px  
    
.page-nav-overlay
    position(fixed, 0px, , ,0px)
    size(100%, 100%)
    opacity 0
    visibility hidden
    transition opacity .35s, visibility .35s, height .35s
    overflow auto
    background #333      
    
.open
    opacity 1
    visibility visible
    height 100%

.wrap
    display flex
    justify-content center
    align-items center
    height 100%

.inner
    position relative
    max-width 90%
    text-align center
    color #e9e9e9

.menu-list-overlay
    display flex
    flex-direction row
    justify-content space-around
	padding 150px 0px 100px
    border-bottom 1px solid #575757
	text-transform capitalize
    
.menu-item-overlay
    font-size 20px
	display inline-block
	vertical-align top
	width 24% 
	position relative

.menu-link-overlay
    display inline-block
    line-height: 60px
    font-size 24px
    color #34B484
	text-decoration none
	transition-property all .2s linear 0s

.menu-link-overlay:hover 
    color white

.menu-sub-list
    li
        padding 5px
    
.menu-sub-list
    a
        font-size 18px
        color white
   
.menu-sub-list
    a:hover
        color #34B484

	
.social
	display flex
	flex-direction row
	justify-content center
	border-top 2px solid white
	font-size 25px
	margin 150px 0px 50px
	padding 20px
	bottom 0px

.social-icon
    p
        margin 0
        padding 20px 0 5px 0
        line-height 30px
        font-size 13px
	
.social p a 
	color #34B484
	text-decoration none
	margin 0
	padding 0

.social-icon 
	display flex
	justify-content center
	align-items center
	margin 0 20px
	size(80px, 50px)
	background #e9e9e9
	color #333
	transition-property all .2s linear 0s

.social-icon:hover
    background #34B484
    color #f0f0f0

